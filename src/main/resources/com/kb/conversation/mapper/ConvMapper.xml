<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kb.conversation.mapper.ConvMapper">

    <!-- 채팅 기록 저장 -->
    <insert id="insertConversation" parameterType="com.kb.conversation.dto.ConvDTO">
        INSERT INTO conversation (idx, question, answer, createdAt)
        VALUES (#{idx}, #{question}, #{answer}, default)
    </insert>

    <!-- 특정 멤버의 채팅 기록 조회 -->
    <select id="getConversationsByMno" resultType="com.kb.conversation.dto.ConvDTO">
        SELECT cno, idx, question, answer, createdAt
        FROM conversation
        WHERE createdAt = #{createdAt}
    </select>

    <!-- 특정 멤버의 채팅 기록 삭제 -->
    <delete id="deleteConversationsByMno">
        DELETE FROM conversation
        WHERE createdAt = #{createdAt}
    </delete>
</mapper>
